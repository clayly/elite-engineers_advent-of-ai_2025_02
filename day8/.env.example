# AI Chat Application Configuration
# Copy this file to .env and fill in your API keys

# Model selection - set to "true" to use Ollama instead of OpenAI API
USE_OLLAMA=false

# OpenAI-compatible API (for GLM from z.ai)
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.z.ai/api/coding/paas/v4/

# Model configuration for OpenAI API
MODEL_NAME=glm-4.6
TEMPERATURE=0.7
MAX_TOKENS=1000

# Ollama configuration (only used if USE_OLLAMA=true)
OLLAMA_MODEL_NAME=llama3.1
OLLAMA_BASE_URL=http://localhost:11434

# RAG Configuration
# Similarity threshold for filtering RAG results (0.0-1.0)
# Lower values = more results, potentially less relevant
# Higher values = fewer results, more relevant
# Recommended: 0.3 for general use, 0.5-0.7 for precision
RAG_SIMILARITY_THRESHOLD=0.5

# Voice Input Configuration (optional)
# Set to 'true' to enable voice input at startup
VOICE_MODE_ENABLED=false
# Whisper model size: tiny, base, small, medium, large, turbo
WHISPER_MODEL_SIZE=base
